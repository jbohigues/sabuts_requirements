---
import { getImage } from "astro:assets";
import favicon from "../assets/logo_with_name.webp";

const optimizedFavicon = await getImage({
  src: favicon,
  width: 32,
  height: 32,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href={optimizedFavicon.src} />
    <title>Sabuts</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #121212;
    color: white;
    font-family:
      Roboto,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  main {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 2rem 1rem 5rem 1rem;

    img {
      max-height: 265px;
      display: flex;
      margin: 0 auto;
    }

    article {
      margin-bottom: 4rem;
    }
  }

  section,
  p {
    width: 100%;
    max-width: 70ch;
  }

  a {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    color: #121212;
    background-color: #f0f0f088;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  a:hover {
    background-color: #e0e0e0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  a:hover .link-icon {
    opacity: 1;
    transform: translateX(0);
  }

  .link-text {
    margin-right: 10px;
  }

  .link-icon {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }
</style>
